{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$common/": ["src/common/*"],
			"$common/*": ["src/common/*"],
			"$_components/": ["src/_components/*"],
			"$_components/*": ["src/_components/*"],
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
